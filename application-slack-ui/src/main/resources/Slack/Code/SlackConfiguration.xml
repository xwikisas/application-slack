  <content>{{include reference="Licenses.Code.VelocityMacros"/}}

{{velocity}}
## This code is used only to display the missing error message.
#set ($mainPageReference = $services.model.createDocumentReference('', ['Slack', 'Code'], 'SlackConfigurationClass'))
#if (!$services.licensing.licensor.hasLicensureForEntity($mainPageReference))
  {{error}}#getMissingLicenseMessage('slack.extension.name'){{/error}}
#else
  #set ($discard = $xwiki.jsx.use('Slack.Code.SlackConfiguration'))
  $services.localization.render('admin.slack.webhooks.hint')
  ## Use a fake document to display the configuration form.
  #set ($fakeDoc = $xwiki.getDocument('Slack.Code.FakeDocument'))
  #set ($fakeObj = $fakeDoc.newObject('Slack.Code.SlackConfigurationClass'))
  {{html clean="false"}}
    &lt;form id="addWebhookForm" class="xform hidden" action="$xwiki.getURL('Slack.Code.Actions', 'get', 'outputSyntax=plain')" method="post"&gt;
      &lt;fieldset class="header"&gt;
        #set ($class = $xwiki.getClass('Slack.Code.SlackConfigurationClass'))
        &lt;dl&gt;
          #foreach ($prop in $class.properties)
            &lt;dt&gt;$prop.prettyName&lt;dt&gt;
            &lt;dd&gt;{{/html}} $fakeDoc.display($prop.name, 'edit') {{html clean="false"}}&lt;/dd&gt;
          #end
        &lt;/dl&gt;
        &lt;input type="hidden" name="form_token" value="$!escapetool.xml($services.csrf.token)"/&gt;
        &lt;input type="hidden" name="configAction" value="add"/&gt;
        &lt;input class="btn btn-primary" type="submit" value="$services.localization.render('admin.slack.webhook.add')"&gt;
      &lt;/fieldset&gt;
    &lt;/form&gt;
    &lt;button id="addWebhookButton" class="btn btn-primary"&gt;$services.localization.render('admin.slack.webhook.add')&lt;/button&gt;
  {{/html}}
  #set ($results = $services.query.xwql('from doc.object(Slack.Code.SlackConfigurationClass) config').execute())
  ## Display the livetable only if there are results.
  #if ($results.size() &gt; 0)
    #set ($columns = ['doc.space', 'enabled', 'channelName', 'events'])
    #set ($columnsProperties = {
       'doc.space': {'type' : 'text'},
       'channelName': {'type' : 'text'},
       'events': {'type' : 'text'},
       'enabled': {'type' : 'text'}
    })
    #set ($options = {
      'className': 'Slack.Code.SlackConfigurationClass',
      'translationPrefix': 'slack.'
    })
    #livetable('webhooks' $columns $columnsProperties $options)
  #end
#end
#if ($doc.fullName != 'XWiki.XWikiPreferences')
  ## Just redirect to the administration UI.
  $response.sendRedirect($xwiki.getURL('XWiki.XWikiPreferences', 'admin', 'editor=globaladmin&amp;section=slack'))
#end
{{/velocity}}
</content>
